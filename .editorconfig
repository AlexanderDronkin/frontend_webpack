# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*\.[tj]s]
indent_style = space
indent_size = 2

[*\.[tj]sx]
indent_style = space
indent_size = 2

[*\.scss]
indent_style = space
indent_size = 2

[*\.pug]
indent_style = space
indent_size = 2