{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {},
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "eslint-plugin-tsdoc"
    ],
    "settings": {},
    "rules": {
      // TSyringe заполняет пустые конструкторы
      "no-useless-constructor": 0,
      "tsdoc/syntax": "warn"
    }
}
